{
  "name": "case",
  "version": "0.5.0",
  "description": "CASE Framework for custom web apps",
  "scripts": {
    "case:install": "npm install && npm run install:client && npm run install:server",
    "install:client": "cd client && npm i",
    "install:server": "cd server && npm i --force && cp .env.example .env",
    "start:client": "cd client && ng serve",
    "start:server": "cd server && npm run start:dev",
    "start:docs": "cd docs && docsify serve -p 2000",
    "seed": "cd server && npm run seed",
    "test": "echo \"Error: no test specified\" && exit 1",
    "case:resource": "schematics ./node_modules/@case-app/schematics/collection.json:createResourceClient --debug=false && schematics ./node_modules/@case-app/schematics/collection.json:createResourceServer --debug=false && npm run seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/case-app/case.git"
  },
  "author": "CASE",
  "license": "MIT",
  "homepage": "https://case.app",
  "dependencies": {
    "@case-app/schematics": "^0.4.5",
    "@types/jest": "^29.0.0"
  }
}
